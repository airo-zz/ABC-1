#include <iostream>
#include <cmath>

using namespace std;

int countPositiveNumbers(int r, int k) {
    return pow(r, k) - 1;
}

int main() {
    int r, k;
    cout << "Введите основание системы счисления (r): ";
    cin >> r;
    cout << "Введите количество разрядов (k): ";
    cin >> k;

    int result = countPositiveNumbers(r, k);
    cout << "Количество положительных чисел: " << result << endl;

    return 0;
}
